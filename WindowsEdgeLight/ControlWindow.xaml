                    Margin="5"
                    FontSize="20"
                    ToolTip="Decrease Brightness (Ctrl+Shift+Down)"/>
            
            <Button Content="ðŸ”†" 
                    Click="BrightnessUp_Click"
                    Width="40" Height="40" 
                    Margin="5"
                    FontSize="20"
                    ToolTip="Increase Brightness (Ctrl+Shift+Up)"/>
            
            <Button Content="ðŸ’¡" 
                    Click="Toggle_Click"
                    Width="40" Height="40" 
                    Margin="5"
                    FontSize="20"
                    ToolTip="Toggle Light (Ctrl+Shift+L)"/>
            
            <Button Content="âœ–" 
                    Click="Close_Click"
