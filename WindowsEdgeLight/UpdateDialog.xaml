<Window x:Class="WindowsEdgeLight.UpdateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Available" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸŽ‰ Update Available!" 
                       FontSize="24" 
                       FontWeight="Bold"
                       Foreground="#2196F3"/>
            <TextBlock x:Name="VersionText" 
                       Text="Version X.X.X is now available!" 
                       FontSize="14" 
                       Margin="0,5,0,0"
                       Foreground="#666"/>
        </StackPanel>

        <!-- Release Notes Header -->
        <TextBlock Grid.Row="1" 
                   Text="ðŸ“ Release Notes:" 
                   FontSize="16" 
                   FontWeight="SemiBold"
                   Margin="0,0,0,10"
                   Foreground="#333"/>

        <!-- Release Notes -->
        <Border Grid.Row="2" 
                BorderBrush="#DDD" 
                BorderThickness="1" 
                CornerRadius="5"
                Background="White"
                Margin="0,0,0,20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="ReleaseNotesText" 
                          Margin="15"
                          TextWrapping="Wrap"
                          FontFamily="Consolas"
                          FontSize="12"
                          Foreground="#333"
                          LineHeight="18"/>
            </ScrollViewer>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="SkipButton" 
                    Content="Skip This Version" 
                    Width="140" 
                    Height="35"
                    Margin="0,0,10,0"
                    Click="SkipButton_Click"
                    Background="#757575"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="13"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#757575"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5"
                                            Padding="10,5">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#616161"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="RemindLaterButton" 
                    Content="Remind Me Later" 
                    Width="140" 
                    Height="35"
                    Margin="0,0,10,0"
                    Click="RemindLaterButton_Click"
                    Background="#9E9E9E"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="13"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#9E9E9E"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5"
                                            Padding="10,5">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#757575"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="DownloadButton" 
                    Content="Download &amp; Install" 
                    Width="140" 
                    Height="35"
                    Click="DownloadButton_Click"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="13"
                    FontWeight="SemiBold"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#4CAF50"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5"
                                            Padding="10,5">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45a049"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
